{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "rootDir": ".",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "lib",
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts", "src/**/*.json", "serverless.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
